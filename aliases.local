# vi: syntax=sh

# Random useful aliases
alias gvim='/Applications/MacVim.app/Contents/MacOS/Vim -g'
alias ls='ls -G'
alias vi='vim'
alias pman='~/.bin/pman'
alias flushdns='sudo killall -HUP mDNSResponder'
alias tug="echo \"You're an idiot and can't spell tig properly\""
alias tmuxnew='tmux -S /var/tmux/pairing new-session -s IB'
alias tmuxjoin='tmux -S /var/tmux/pairing attach -t IB'
